@page
@model CollegeMonitor.Pages_Sessions.IndexModel


<p>
    <a href="/sessions/create" class="btn btn-success"><i class="bi bi-plus-lg"></i> Create new</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].Details)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Session[0].CreditHrs)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Session) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Details)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreditHrs)
            </td>
            <td>
               <a asp-page="./Edit" asp-route-id="@item.Id"class="btn btn-primary"><i class="bi bi-pencil text-warning"></i></a> |
                <a asp-page="./Details" asp-route-id="@item.Id"class="btn btn-primary"><i class="bi bi-eye-fill"></i></a> |
                <a asp-page="./Delete" asp-route-id="@item.Id"class="btn btn-danger" ><i class="bi bi-trash"></i></a>
            </td>
        </tr>
        }

    </tbody>
</table>

